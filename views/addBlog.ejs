<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
    <title>ADD NEW BLOG</title>

</head>

<body>


  <%- include('./partials/nav') %>

    <div class="container mt-3">
      <form action="/blog" method="post" enctype="multipart/form-data">
        <div class="mb-3">
          <label for="coverImage" class="form-label" style="font-weight: bolder;">Cover Image</label>
          <input type="file" class="form-control" id="coverImage" aria-describedby="coverImage" name="coverImage">
        </div>

        <div class="mb-3">
          <label for="title" class="form-label" style="font-weight: bolder;">Title:</label>
          <input type="text" class="form-control" id="title" aria-describedby="title" name="title">
        </div>

        <div class="mb-3">
          <label for="body" style="font-weight: bolder;">Body</label>
          <textarea class="form-control" name="body" id="body"></textarea>
        </div>

        <div class="mb-3">
          <button class="btn btn-primary"> Submit </button>
        </div>
      </form>

    </div>

    <%- include('./partials/script') %>

</body>

</html>